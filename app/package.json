  "name": "docker-node-express-boilerplate",
  "description": "Boilerplate Dockerized Graphql app",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --inspect=0.0.0.0:9229 ./src/index.js  --ext js,graphql --exec babel-node",
