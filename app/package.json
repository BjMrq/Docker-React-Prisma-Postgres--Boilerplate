    "@babel/runtime": "^7.9.2",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "*",
    "cross-env": "^7.0.2",
    "dotenv": "8.2.0",
    "graphql-cli": "^3.0.14",
    "graphql-yoga": "^1.18.3",
    "jest": "^25.1.0",
